<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MT.Views.BranchOrderPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MT.ViewModels"
    xmlns:local2="clr-namespace:MT.Models"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <local:branchorderpageviewmodel />
    </ContentPage.BindingContext>

    <StackLayout
        BackgroundColor="{DynamicResource Background}"
        HorizontalOptions="CenterAndExpand"
        Orientation="Vertical"
        Spacing="0"
        VerticalOptions="FillAndExpand">


        <!--#region Top Navigation-->
        <StackLayout
            Padding="12,0,0,0"
            HeightRequest="60"
            HorizontalOptions="FillAndExpand"
            Orientation="Horizontal"
            VerticalOptions="Start">
            <Label
                FontAttributes="Bold"
                FontSize="30"
                HorizontalOptions="StartAndExpand"
                Text="{Binding BranchName, StringFormat='{0} - Branch'}"
                TextColor="{DynamicResource Primary}"
                VerticalOptions="Center" />
            <Button
                Padding="0"
                BackgroundColor="Transparent"
                Command="{Binding onLogoutCommand}"
                FontSize="Small"
                HorizontalOptions="End"
                Text="logout"
                TextColor="{DynamicResource Danger}"
                VerticalOptions="Center" />
        </StackLayout>
        <!--#endregion-->

        <!--#region Tool Bar-->
        <Frame
            Padding="-8,12,6,12"
            BackgroundColor="{DynamicResource Background}"
            HorizontalOptions="Fill">
            <StackLayout
                Padding="0,0,0,0"
                Orientation="Horizontal"
                Spacing="0">

                <StackLayout
                    HorizontalOptions="StartAndExpand"
                    Orientation="Horizontal"
                    Spacing="0">

                    <SearchBar
                        FontSize="Medium"
                        HeightRequest="40"
                        HorizontalOptions="StartAndExpand"
                        Placeholder="Product Name"
                        VerticalOptions="Center"
                        WidthRequest="220" />
                    <Button
                        Padding="0"
                        BackgroundColor="{DynamicResource Safe}"
                        CornerRadius="45"
                        FontSize="Small"
                        HeightRequest="40"
                        HorizontalOptions="End"
                        Text="Add"
                        TextColor="ForestGreen"
                        VerticalOptions="Center"
                        WidthRequest="50" />

                </StackLayout>
                <Label
                    FontSize="Title"
                    MinimumWidthRequest="20"
                    Text="  |  "
                    VerticalOptions="Center" />
                <StackLayout
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal"
                    Spacing="0">
                    <Label
                        FontSize="Large"
                        HeightRequest="40"
                        HorizontalOptions="End"
                        MinimumWidthRequest="40"
                        Text="Date:"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                    <DatePicker
                        Date="{Binding DateOrder, Mode=OneWayToSource}"
                        Format="MMM/dd/yyyy"
                        HeightRequest="40"
                        HorizontalOptions="EndAndExpand"
                        MinimumWidthRequest="60"
                        TextColor="{DynamicResource Info}"
                        VerticalOptions="Center" />
                </StackLayout>
            </StackLayout>
        </Frame>
        <!--#endregion-->


        <!--#region DataTemplates and list-->
        <StackLayout
            BackgroundColor="{DynamicResource Background}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">

            <RefreshView
                Command="{Binding onPulltoRefreshCommand}"
                IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                RefreshColor="{DynamicResource Primary}">
                <CollectionView
                    x:Name="CollectionView"
                    BackgroundColor="Transparent"
                    IsGrouped="True"
                    ItemSizingStrategy="MeasureAllItems"
                    ItemsLayout="VerticalList"
                    ItemsSource="{Binding Products}"
                    SelectionMode="Single"
                    Visual="Material">

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="local2:productOrderModel">
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem BackgroundColor="{DynamicResource Danger}" Text="Delete" />
                                        <SwipeItem BackgroundColor="{DynamicResource Warning}" Text="Edit" />
                                    </SwipeItems>
                                </SwipeView.RightItems>

                                <Grid BackgroundColor="{DynamicResource Background}" RowSpacing="6">
                                    <Frame
                                        Margin="6,3,6,3"
                                        Padding="0"
                                        BackgroundColor="{DynamicResource Background}">
                                        <StackLayout Spacing="0">
                                            <StackLayout
                                                Padding="24,18,32,18"
                                                HorizontalOptions="Fill"
                                                Orientation="Horizontal"
                                                VerticalOptions="Center">

                                                <Label
                                                    Margin="0,0,6,0"
                                                    FontSize="Body"
                                                    HorizontalOptions="Start"
                                                    Text="{Binding Qty, StringFormat='{0} p/s'}"
                                                    VerticalOptions="Center"
                                                    WidthRequest="40" />

                                                <BoxView
                                                    Margin="0,0,6,0"
                                                    BackgroundColor="NavajoWhite"
                                                    CornerRadius="10"
                                                    VerticalOptions="Fill"
                                                    WidthRequest="10"
                                                    Color="{DynamicResource Info}" />

                                                <StackLayout
                                                    Padding="6,0,0,0"
                                                    HorizontalOptions="FillAndExpand"
                                                    Orientation="Vertical"
                                                    Spacing="0">
                                                    <Label FontSize="Medium" Text="{Binding Productid, StringFormat='Product ID #{0}'}" />
                                                    <Label
                                                        FontSize="Large"
                                                        Text="{Binding ProductName}"
                                                        TextColor="Black" />
                                                    <Label FontSize="Default" Text="{Binding Price, StringFormat='Commi price: {0} php'}" />
                                                </StackLayout>

                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="Large"
                                                    HorizontalOptions="End"
                                                    Text="{Binding Amount, StringFormat='{0} php'}"
                                                    TextColor="DarkGreen"
                                                    VerticalOptions="Center" />
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                                </Grid>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.EmptyView>
                        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Label
                                HorizontalOptions="Center"
                                Text="No Data Collected"
                                VerticalOptions="Center" />
                        </StackLayout>
                    </CollectionView.EmptyView>

                    <CollectionView.GroupHeaderTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Label
                                    Margin="8"
                                    FontAttributes="Bold"
                                    FontSize="Title"
                                    Text="{Binding Key}"
                                    TextColor="{DynamicResource Accent}" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.GroupHeaderTemplate>

                </CollectionView>
            </RefreshView>
            <StackLayout Padding="16">
                <Label
                    FontSize="Title"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="End"
                    Text="{Binding Total, StringFormat='Total = {0:F2}'}"
                    TextColor="DarkGreen"
                    VerticalOptions="End" />
            </StackLayout>
        </StackLayout>
        <!--#endregion-->


    </StackLayout>
</ContentPage>